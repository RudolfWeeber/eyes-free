<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent"
  android:layout_height="fill_parent">

  <TextView android:layout_width="fill_parent"
    android:textStyle="bold" android:textSize="25dip" android:gravity="center"
    android:layout_height="wrap_content" android:text=" " />
    
  <TextView android:id="@+id/statusText" android:layout_width="fill_parent"
    android:textStyle="bold" android:textSize="35dip" android:gravity="center"
    android:layout_height="wrap_content" android:text="Rock Lock" />
    
  <TextView android:layout_width="fill_parent"
    android:textStyle="bold" android:textSize="25dip" android:gravity="center"
    android:layout_height="wrap_content" android:text=" " />
    
  <TextView android:id="@+id/infoText" android:layout_width="fill_parent"
    android:textStyle="bold" android:textSize="25dip" android:gravity="center"
    android:layout_height="wrap_content" android:text="The lock that rocks!" />

</LinearLayout>
