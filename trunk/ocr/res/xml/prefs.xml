<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference android:key="manage"
        android:title="Manage Language Packs" />

    <ListPreference android:key="lang_pref"
        android:title="Set Default Language" />
    
    <ListPreference android:key="speed_pref"
        android:title="Set Processing Speed"
        android:entries="@array/speed_entries"
        android:entryValues="@array/speed_values"
        android:defaultValue="0" />
    
    <CheckBoxPreference android:key="override_pref"
        android:title="Override App Settings"
        android:summaryOn="Applications will be not able to set their own language"
        android:summaryOff="(Default) Applications will be able to set their own language"
        android:defaultValue="false" />
    
    <CheckBoxPreference android:key="debug_pref"
        android:title="Debug Mode"
        android:summaryOn="OCR will write intermediate files to SD card"
        android:summaryOff="(Default) OCR will not write intermediate files"
        android:defaultValue="false" />

</PreferenceScreen>
