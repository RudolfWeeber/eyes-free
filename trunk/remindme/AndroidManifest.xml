<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.google.marvin.remindme" android:versionCode="1"
	android:versionName="1.0.0">
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".RemindMe" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ReminderSpeakerActivity"
			android:label="@string/app_name" android:theme="@android:style/Theme.Translucent.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
	</application>
	<uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
		android:name="android.permission.RECORD_AUDIO" />
	<uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
		android:name="android.permission.VIBRATE" />
</manifest> 