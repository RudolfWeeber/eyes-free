<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:paddingLeft="15dip" android:paddingRight="10dip"
	android:paddingTop="8dip" android:paddingBottom="8dip">
	
	<TextView
		android:id="@+id/script_title"  
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingRight="40dip"
		android:textAppearance="?android:attr/textAppearanceMedium"
		/>

	<TextView
		android:id="@+id/script_descrip"  
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/script_title"
		android:paddingRight="40dip"
		android:textAppearance="?android:attr/textAppearanceSmall"
		/>

	<CheckBox
		android:id="@+id/script_enabled"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/script_title"
		android:layout_alignParentRight="true"
		android:clickable="false"
		android:focusable="false"
		/>
		
</RelativeLayout>