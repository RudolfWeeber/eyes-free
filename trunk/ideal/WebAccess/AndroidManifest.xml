<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ideal.webaccess" android:versionCode="7"
	android:versionName="2.0">
	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.VIBRATE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission
		android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
	<uses-permission
		android:name="com.android.browser.permission.WRITE_HISTORY_BOOKMARKS" />

	<application android:icon="@drawable/icon" android:label="@string/app_name">
	
		<!-- Web Reader Browser -->
		<activity android:name="com.ideal.webreader.WebReaderActivity" android:label="@string/webreader_app_name"
			android:launchMode="singleTask" android:alwaysRetainTaskState="true"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.LAUNCHER" />
				<category android:name="android.intent.category.BROWSABLE" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="http" />
				<data android:scheme="https" />
				<data android:scheme="about" />
				<data android:scheme="javascript" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.BROWSABLE" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:scheme="http" />
				<data android:scheme="https" />
				<data android:scheme="inline" />
				<data android:mimeType="text/html" />
				<data android:mimeType="text/plain" />
				<data android:mimeType="application/xhtml+xml" />
				<data android:mimeType="application/vnd.wap.xhtml+xml" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.WEB_SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="" />
				<data android:scheme="http" />
				<data android:scheme="https" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>

		<!--
			Makes .BrowserActivity the search target for any activity in Browser
		-->
		<meta-data android:name="android.app.default_searchable"
			android:value=".WebReaderActivity" />


		<activity android:name="com.ideal.webreader.PrefsActivity" android:label="@string/webreader_app_name"
			android:configChanges="orientation|keyboardHidden">
		</activity>

		<activity android:name="com.ideal.webreader.CreateGestureWizardActivity"
			android:label="@string/webreader_app_name" android:configChanges="orientation|keyboardHidden">
		</activity>

		<activity android:name="com.ideal.webreader.BookmarksActivity" android:label="Bookmarks"
			android:configChanges="orientation|keyboardHidden">
		</activity>
	
	
	
		<!-- Plugin -->
		<!-- 
		<activity android:name=".StartIdealWebAccess" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		 -->
		<provider android:name=".LocalJsProvider"
			android:authorities="com.ideal.webaccess.localjs" />
		<provider android:name=".TtsContentProvider"
			android:authorities="com.ideal.webaccess.tts" />
	</application>


</manifest> 