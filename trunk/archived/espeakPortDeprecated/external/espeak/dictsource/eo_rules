		n (_S1	n

        _)	n (-ro_  num'e

		
.group o
	_)	o(_	o
		o	o
		oj	OI
		
.group p
	_)	p(_	po
		p	p
		ph (K	f    // foreign words
	K)	ph	f    // foreign words
		
.group q
	_)	q(_	kwo
		q	k
		qu	kv
		
.group r
	_)	r(_	Ro
		r	R
	A)	r (A	R
	K)	r (A	@-*
                rr      RR

       -)	ro (_   R%o   // d-ro, n-ro
		
.group s
	_)	s(_	so
