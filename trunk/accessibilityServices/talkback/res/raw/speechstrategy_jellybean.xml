<?xml version="1.0" encoding="UTF-8"?>
  <ss:speechstrategy xmlns:ss="http://www.google.android.marvin.talkback.com/speechstrategy"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.google.android.marvin.talkback.com/speechstrategy speechstrategy.xsd">

  <!-- TYPE_VIEW_FOCUSED -->

  <!-- Special case for FOCUSED and SELECTED, we usually only want ACCESSIBILITY_FOCUS -->
  <ss:rule>
    <ss:filter>
      <ss:custom>com.google.android.marvin.talkback.formatter.FallbackFormatter</ss:custom>
      <ss:platformSdk>&gt;=16</ss:platformSdk>
    </ss:filter>
    <ss:formatter>
      <ss:custom>com.google.android.marvin.talkback.formatter.FallbackFormatter</ss:custom>
    </ss:formatter>
  </ss:rule>

  <!-- Phone - Speak in-call screen -->
  <ss:rule>
    <ss:filter>
      <ss:eventType>TYPE_WINDOW_STATE_CHANGED</ss:eventType>
      <ss:className>com.android.phone.InCallScreen</ss:className>
      <ss:packageName>com.android.phone</ss:packageName>
      <ss:platformSdk>&gt;=16</ss:platformSdk>
    </ss:filter>
    <ss:formatter>
      <ss:custom>com.google.android.marvin.talkback.formatter.phone.InCallScreenFormatterJB</ss:custom>
    </ss:formatter>
  </ss:rule>

</ss:speechstrategy>
