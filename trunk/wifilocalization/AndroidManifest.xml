<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.whereabout.location">
  <application android:icon="@drawable/wifiservice" android:label="@string/app_name">

    <activity android:name="com.whereabout.whereami.Launcher"
      android:label="WiFi Localizer" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="com.whereabout.whereami.MappingDemoActivity"
      android:label="WiFi Localizer" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.LocationDemoActivity"
      android:label="WiFi Localizer" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.TestingDemoActivity"
      android:label="WiFi Localizer" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.LocalizeOnDemand"
      android:label="WiFi Localizer" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.WhereAmI"
      android:label="@string/whereami" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.MarkLocation"
      android:label="@string/marklocation" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.GenerateXYLocationsActivity"
      android:label="@string/createMap" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.CreateMapActivity"
      android:label="@string/createMap" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.NonEditableMapActivity"
      android:label="@string/createMap" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <activity android:name="com.whereabout.whereami.Navigation"
      android:label="@string/navigate" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>
    
    <activity android:name="com.whereabout.whereami.NavigationView"
      android:label="@string/navigate" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>
    
    <activity android:name="com.whereabout.whereami.HealthCheckActivity"
      android:label="Accuracy test" android:screenOrientation="portrait"
      android:configChanges="orientation|keyboardHidden">
    </activity>

    <service android:enabled="true"
      android:name="com.whereabout.wifiservice.WifiLocalizationService"
      android:label="@string/app_name" android:icon="@drawable/wifiservice">
      <intent-filter>
        <action android:name="android.intent.action.USE_WIFI_SERVICE" />
        <category android:name="android.intent.category.WIFI_SERVICE" />
      </intent-filter>
    </service>
  </application>
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="android.permission.BROADCAST_STICKY" />
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="android.permission.CHANGE_WIFI_STATE" />
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="android.permission.ACCESS_WIFI_STATE" />
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="android.permission.VIBRATE" />
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
  <uses-permission xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest> 
