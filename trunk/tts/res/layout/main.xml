<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <TextView  
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text="Text-To-Speech Settings"
      android:textSize="20sp"
      />
      
  <TextView  
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text=" "
      android:textSize="20sp"
      />
    
  
  <TextView  
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:text="Default Language"
      android:textSize="16sp"
      />    
  <Spinner android:id="@+id/language"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:entries="@array/languages"
      android:text="English (American) [en-us]"
      />

      
  <TextView  
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text=" "
      android:textSize="15sp"
      />
    
      
  <TextView  
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:text="Default Speech Rate"
      android:textSize="16sp"
      />    
  <Spinner android:id="@+id/rate"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:entries="@array/rates"
      android:value="Normal"
      />

      
  <TextView  
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text=" "
      android:textSize="15sp"
      />
    

  <CheckBox android:id="@+id/allowOverride"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Override application settings"
      android:checked="false"
      />

      
  <TextView  
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text=" "
      android:textSize="20sp"
      />

  <Button android:id="@+id/test"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Try these settings"
      android:textSize="20sp"
      />

      
  <TextView  
      android:layout_width="fill_parent" 
      android:layout_height="wrap_content" 
      android:text=" "
      android:textSize="20sp"
      />
    
<LinearLayout 
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
  <Button android:id="@+id/save"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Save"
      android:textSize="20sp"
      />
  <TextView  
      android:layout_width="wrap_content" 
      android:layout_height="wrap_content" 
      android:text="                                 "
      android:textSize="20sp"
      />
  <Button android:id="@+id/cancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Cancel"
      android:textSize="20sp"
      />
</LinearLayout>
    
</LinearLayout>
